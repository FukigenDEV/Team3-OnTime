<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_nav"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <ImageView
        android:id="@+id/nav_bg"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:src="@drawable/layout_bg_rect_l"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/nav_bg_1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="14dp"
        android:layout_weight="1"
        android:src="@drawable/layout_bg_rect"
        app:layout_constraintBottom_toBottomOf="@+id/nav_bg"
        app:layout_constraintEnd_toStartOf="@id/nav_bg_2"
        app:layout_constraintStart_toStartOf="@+id/nav_bg" />

    <ImageView
        android:id="@+id/nav_bg_2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginEnd="14dp"
        android:layout_weight="1"
        android:src="@drawable/layout_bg_rect"
        app:layout_constraintBottom_toBottomOf="@+id/nav_bg"
        app:layout_constraintEnd_toStartOf="@+id/nav_bg_3"
        app:layout_constraintStart_toEndOf="@+id/nav_bg_1" />

    <ImageView
        android:id="@+id/nav_bg_3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:src="@drawable/layout_bg_rect"
        app:layout_constraintBottom_toBottomOf="@id/nav_bg"
        app:layout_constraintEnd_toEndOf="@id/nav_bg"
        app:layout_constraintStart_toEndOf="@+id/nav_bg_2"
        android:layout_marginLeft="4dp" />

    <ImageView
        android:id="@+id/subnav_ic_create_team"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/ic_iconmonstr_user_25"
        app:layout_constraintEnd_toEndOf="@+id/nav_bg_1"
        app:layout_constraintStart_toStartOf="@+id/nav_bg_1"
        app:layout_constraintTop_toTopOf="@+id/nav_bg_1" />

    <TextView
        android:id="@+id/subnav_tv_create_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE TEAM"
        android:fontFamily="@font/opensans_semibold"
        android:textSize="8sp"
        android:textColor="@color/colorGlobal4"
        app:layout_constraintTop_toBottomOf="@+id/subnav_ic_create_team"
        app:layout_constraintEnd_toEndOf="@+id/nav_bg_1"
        app:layout_constraintStart_toStartOf="@+id/nav_bg_1"
        />

    <ImageView
        android:id="@+id/subnav_ic_join_team"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/ic_iconmonstr_networking_2"
        app:layout_constraintEnd_toEndOf="@+id/nav_bg_2"
        app:layout_constraintStart_toStartOf="@+id/nav_bg_2"
        app:layout_constraintTop_toTopOf="@+id/nav_bg_2" />

    <TextView
        android:id="@+id/subnav_tv_join_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOIN TEAM"
        android:fontFamily="@font/opensans_semibold"
        android:textSize="8sp"
        android:textColor="@color/colorGlobal4"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/subnav_ic_join_team"
        app:layout_constraintEnd_toEndOf="@+id/nav_bg_2"
        app:layout_constraintStart_toStartOf="@+id/nav_bg_2"
        />

    <ImageView
        android:id="@+id/subnav_ic_set_tasks"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/ic_iconmonstr_text_28"
        app:layout_constraintEnd_toEndOf="@+id/nav_bg_3"
        app:layout_constraintStart_toStartOf="@+id/nav_bg_3"
        app:layout_constraintTop_toTopOf="@+id/nav_bg_3" />

    <TextView
        android:id="@+id/subnav_tv_set_tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SET TASKS"
        android:fontFamily="@font/opensans_semibold"
        android:textSize="8sp"
        android:textColor="@color/colorGlobal4"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/subnav_ic_set_tasks"
        app:layout_constraintEnd_toEndOf="@+id/nav_bg_3"
        app:layout_constraintStart_toStartOf="@+id/nav_bg_3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>